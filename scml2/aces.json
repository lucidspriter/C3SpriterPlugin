{
	"$schema": "../aces.schema.json",

	"initialisation": {
		"conditions": [
			{
				"id": "on-ready",
				"scriptName": "OnReady",
				"isTrigger": true,
				"highlight": true
			}
		],
		"actions": [
			{
				"id": "associate-type-with-name",
				"scriptName": "AssociateTypeWithName",
				"highlight": true,
				"params": [
					{"id": "object-type", "type": "object"},
					{"id": "spriter-name", "type": "string"}
				]
			}
		],
		"expressions": []
	},

	"custom": {
		"conditions": [
			{
				"id": "on-load-failed",
				"scriptName": "OnLoadFailed",
				"isTrigger": true,
				"highlight": true
			},
			{
				"id": "is-ready",
				"scriptName": "IsReady",
				"highlight": true
			}
		],
		"actions": [],
		"expressions": [
			{
				"id": "last-error",
				"expressionName": "LastError",
				"highlight": false,
				"returnType": "string"
			},
			{
				"id": "time",
				"expressionName": "Time",
				"highlight": false,
				"returnType": "number"
			},
			{
				"id": "object-count",
				"expressionName": "ObjectCount",
				"highlight": false,
				"returnType": "number"
			},
			{
				"id": "entity-name",
				"expressionName": "EntityName",
				"highlight": false,
				"returnType": "string"
			},
			{
				"id": "animation-name",
				"expressionName": "AnimationName",
				"highlight": false,
				"returnType": "string"
			}
		]
	},

	"sounds": {
		"conditions": [
			{
				"id": "on-sound-triggered",
				"scriptName": "OnSoundTriggered",
				"isTrigger": true,
				"highlight": true
			},
			{
				"id": "on-sound-volume-change-triggered",
				"scriptName": "OnSoundVolumeChangeTriggered",
				"isTrigger": true,
				"highlight": false
			},
			{
				"id": "on-sound-panning-change-triggered",
				"scriptName": "OnSoundPanningChangeTriggered",
				"isTrigger": true,
				"highlight": false
			}
		],
		"actions": [],
		"expressions": [
			{
				"id": "triggered-sound",
				"expressionName": "TriggeredSound",
				"highlight": false,
				"returnType": "string"
			},
			{
				"id": "triggered-sound-tag",
				"expressionName": "TriggeredSoundTag",
				"highlight": false,
				"returnType": "string"
			},
			{
				"id": "sound-volume",
				"expressionName": "SoundVolume",
				"highlight": false,
				"returnType": "number",
				"params": [
					{
						"id": "sound-tag",
						"type": "string"
					}
				]
			},
			{
				"id": "sound-panning",
				"expressionName": "SoundPanning",
				"highlight": false,
				"returnType": "number",
				"params": [
					{
						"id": "sound-tag",
						"type": "string"
					}
				]
			}
		]
	},

	"attach_c2_object": {
		"conditions": [],
		"actions": [
			{
				"id": "pin-c3-object-to-spriter-object",
				"scriptName": "PinC3ObjectToSpriterObject",
				"highlight": false,
				"params": [
					{"id": "c3-object", "type": "object"},
					{"id": "set-which-properties", "type": "combo", "items": ["angle and position", "angle", "position"]},
					{"id": "spriter-object-name", "type": "string"}
				]
			},
			{
				"id": "set-c3-object-to-spriter-object",
				"scriptName": "SetC3ObjectToSpriterObject",
				"highlight": false,
				"params": [
					{"id": "c3-object", "type": "object"},
					{"id": "set-which-properties", "type": "combo", "items": ["angle and position", "angle", "position"]},
					{"id": "spriter-object-name", "type": "string"}
				]
			},
			{
				"id": "unpin-c3-object-from-spriter-object",
				"scriptName": "UnpinC3ObjectFromSpriterObject",
				"highlight": false,
				"params": [
					{"id": "c3-object", "type": "object"},
					{"id": "spriter-object-name", "type": "string"}
				]
			},
			{
				"id": "unpin-all-from-spriter-object",
				"scriptName": "UnpinAllFromSpriterObject",
				"highlight": false,
				"params": [
					{"id": "spriter-object-name", "type": "string"}
				]
			}
		],
		"expressions": []
	}
}
